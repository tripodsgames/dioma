{
  "name": "dioma",
  "version": "0.2.0",
  "description": "Elegant dependency injection container for vanilla JavaScript and TypeScript",
  "keywords": [
    "di",
    "dependency injection",
    "di container",
    "inversion of control",
    "ioc",
    "ioc container",
    "javascript",
    "typescript",
    "dioma",
    "inversify",
    "awilix",
    "tsyringe"
  ],
  "files": [
    "src/dioma.ts",
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "clear": "rm -rf dist",
    "build:es6": "tsc --outDir dist/es6 --module es6 --target es6 --declaration --declarationDir dist",
    "build:common": "tsc --outDir dist/common --module commonjs --target es6",
    "build:umd": "tsc --outDir dist/umd --module umd --target es5",
    "build": "npm run clear && npm run build:es6 && npm run build:common && npm run build:umd",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "latest",
    "typescript": "^5.4.2",
    "vite": "latest",
    "vitest": "latest"
  },
  "types": "dist/dioma.d.ts",
  "module": "dist/es6/dioma.js",
  "main": "dist/common/dioma.js",
  "umd:main": "dist/umd/dioma.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:zheksoon/dioma.git"
  }
}
